<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maria.intencionesprofe.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="pgWeb"
            android:text="@string/b_Web" />

        <Button
            android:id="@+id/bTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="llamadaTelefono"
            android:text="@string/b_Telefono" />

        <Button
            android:id="@+id/bgMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="googleMaps"
            android:text="@string/b_googleMaps" />

        <Button
            android:id="@+id/bFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="tomarFoto"
            android:text="@string/b_tomarFoto" />

        <Button
            android:id="@+id/bCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mandarCorreo"
            android:text="@string/bt_correo" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
